    </top>

    <!-- CENTER: Contenido principal -->
    <center>
        <VBox spacing="15" styleClass="main-content">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            
            <!-- Panel de bÃºsqueda y filtros -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="search-box">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Buscar:"/>
                <TextField fx:id="txtBuscar" promptText="Buscar en la tabla..." 
                          prefWidth="200"/>
                
                <Region prefWidth="20"/>
                
                <Label text="Desde:"/>
                <DatePicker fx:id="dpFechaDesde" promptText="Fecha inicio" 
                           prefWidth="140"/>
                
                <Label text="Hasta:"/>
                <DatePicker fx:id="dpFechaHasta" promptText="Fecha fin" 
                           prefWidth="140"/>
                
                <Button text="ðŸ” Buscar" styleClass="search-button" 
                       onAction="#handleBuscar"/>
                <Button text="âœ– Limpiar" styleClass="secondary-button" 
                       onAction="#handleLimpiarFiltros"/>
            </HBox>

            <!-- Tabla de billeteros -->
            <TableView fx:id="tablaBilleteros" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                    <TableColumn fx:id="colBilletero" text="Billetero" prefWidth="150"/>
                    <TableColumn fx:id="colPremios" text="Premios" prefWidth="150"/>
                    <TableColumn fx:id="colDiferencia" text="Diferencia" prefWidth="150"/>
                    <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="150"/>
                </columns>
                <placeholder>
                    <Label text="No hay registros para mostrar"/>
                </placeholder>
            </TableView>

            <!-- Panel inferior: paginaciÃ³n y totales -->
            <HBox spacing="20" alignment="CENTER">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <VBox spacing="5" alignment="CENTER_LEFT">
                    <Label fx:id="lblTotalRegistros" text="Total registros: 0" 
                          styleClass="info-label"/>
                </VBox>
                
                <Region HBox.hgrow="ALWAYS"/>
                
                <!-- PaginaciÃ³n (opcional para implementar despuÃ©s) -->
                <HBox spacing="10" alignment="CENTER">
                    <Button text="â—€" styleClass="pagination-button" 
                           fx:id="btnAnterior" disable="true"/>
                    <Label fx:id="lblPagina" text="PÃ¡gina 1 de 1"/>
                    <Button text="â–¶" styleClass="pagination-button" 
                           fx:id="btnSiguiente" disable="true"/>
                </HBox>
            </HBox>

            <!-- Panel de resumen con totales -->
            <GridPane hgap="20" vgap="10" styleClass="summary-panel">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                
                <Label text="ðŸ“Š RESUMEN GENERAL" styleClass="summary-title" 
