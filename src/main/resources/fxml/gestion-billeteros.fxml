                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Total Billetero" styleClass="summary-label"/>
                    <Label fx:id="lblTotalBilletero" text="0.00" 
                          styleClass="summary-value"/>
                </VBox>
                
                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Total Premios" styleClass="summary-label"/>
                    <Label fx:id="lblTotalPremios" text="0.00" 
                          styleClass="summary-value"/>
                </VBox>
                
                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Label text="Diferencia Neta" styleClass="summary-label"/>
                    <Label fx:id="lblDiferenciaNeta" text="0.00" 
                          styleClass="summary-value-total"/>
                </VBox>
            </GridPane>

        </VBox>
    </center>

</BorderPane>