            <Button fx:id="btnInicio" 
                    text=" Inicio" 
                    styleClass="menu-button" 
                    onAction="#handleInicio" 
                    maxWidth="Infinity"/>
            
            <Button fx:id="btnGastos" 
                    text=" Mis Gastos" 
                    styleClass="menu-button" 
                    onAction="#handleGastos" 
                    maxWidth="Infinity"/>
            
            <Button fx:id="btnInformes" 
                    text=" Informes" 
                    styleClass="menu-button" 
                    onAction="#handleInformes" 
                    maxWidth="Infinity"/>
            
            <Button fx:id="btnUsuarios" 
                    text=" Usuarios" 
                    styleClass="menu-button" 
                    onAction="#handleUsuarios" 
                    maxWidth="Infinity"/>
            
            <Button fx:id="btnBilleteros" 
                    text=" Billeteros" 
