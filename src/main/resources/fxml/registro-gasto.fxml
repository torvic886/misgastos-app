<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<HBox spacing="20"
      styleClass="content"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.misgastos.controller.RegistroGastoController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- ================= IZQUIERDA: FORMULARIO ================= -->
    <VBox spacing="15" HBox.hgrow="ALWAYS">

        <Label text="âž• Registrar Gasto" styleClass="content-title"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- CategorÃ­a -->
            <Label text="CategorÃ­a:" GridPane.rowIndex="0"/>
            <ComboBox fx:id="cmbCategoria"
                      promptText="Seleccione"
                      GridPane.rowIndex="0"
                      GridPane.columnIndex="1"/>

            <!-- SubcategorÃ­a -->
            <Label text="SubcategorÃ­a:" GridPane.rowIndex="1"/>
            <ComboBox fx:id="cmbSubcategoria"
                      promptText="Seleccione"
                      GridPane.rowIndex="1"
                      GridPane.columnIndex="1"/>

            <!-- Producto -->
            <Label text="Producto:" GridPane.rowIndex="2"/>
            <ComboBox fx:id="cmbProducto"
                      editable="true"
                      promptText="Ej: Arroz"
                      GridPane.rowIndex="2"
                      GridPane.columnIndex="1"/>

            <!-- Cantidad -->
            <Label text="Cantidad:" GridPane.rowIndex="3"/>
            <TextField fx:id="txtCantidad"
                       text="1"
                       GridPane.rowIndex="3"
                       GridPane.columnIndex="1"/>

            <!-- Valor Unitario -->
            <Label text="Valor Unitario:" GridPane.rowIndex="4"/>
            <TextField fx:id="txtValorUnitario"
                       promptText="0.00"
                       GridPane.rowIndex="4"
                       GridPane.columnIndex="1"/>

            <!-- Total -->
            <Label text="Total:" GridPane.rowIndex="5"/>
            <TextField fx:id="txtValorTotal"
                       editable="false"
                       GridPane.rowIndex="5"
                       GridPane.columnIndex="1"/>

            <!-- Notas -->
            <Label text="Notas:" GridPane.rowIndex="6"/>
            <TextArea fx:id="txtNotas"
                      prefRowCount="3"
                      GridPane.rowIndex="6"
                      GridPane.columnIndex="1"/>
        </GridPane>

        <!-- Botones -->
        <HBox spacing="10">
            <Button text="ðŸ’¾ Guardar"
                    styleClass="primary-button"
                    onAction="#handleGuardar"/>
            <Button text="ðŸ§¹ Limpiar"
                    styleClass="secondary-button"
                    onAction="#handleLimpiar"/>
        </HBox>

    </VBox>

    <!-- ================= DERECHA: TABLA ================= -->
    <VBox spacing="10" HBox.hgrow="ALWAYS">

        <Label text="ðŸ“‹ Ãšltimos gastos registrados" styleClass="content-title"/>

		<TableView fx:id="tblUltimosGastos"
		           prefHeight="500"
		           VBox.vgrow="ALWAYS"
		           maxWidth="Infinity">
		    <columns>
		        <TableColumn fx:id="colFecha" text="Fecha"/>
		        <TableColumn fx:id="colCategoria" text="CategorÃ­a"/>
		        <TableColumn fx:id="colProducto" text="Producto"/>
		        <TableColumn fx:id="colCantidad" text="Cant"/>
		        <TableColumn fx:id="colValorUnitario" text="V. Unit"/>
		        <TableColumn fx:id="colTotal" text="Total"/>
		    </columns>
		</TableView>

    </VBox>

</HBox>
