                       visible="false"
                       managed="false"/>

            <!-- âœ… CORREGIDO: Cantidad ahora en rowIndex="4" -->
            <Label text="Cantidad:" GridPane.rowIndex="4"/>
            <TextField fx:id="txtCantidad"
                       text="1"
                       GridPane.rowIndex="4"
                       GridPane.columnIndex="1"/>

            <!-- âœ… CORREGIDO: Valor Unitario en rowIndex="5" -->
            <Label text="Valor Unitario:" GridPane.rowIndex="5"/>
            <TextField fx:id="txtValorUnitario"
