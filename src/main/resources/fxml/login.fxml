<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>

<!-- StackPane que se adapta a cualquier tama침o de ventana -->
<StackPane styleClass="login-root"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.misgastos.controller.LoginController">

    <children>
        <!-- Card M츼S COMPACTO pero ventana grande -->
        <VBox alignment="CENTER"
              prefHeight="540.0"
              prefWidth="400.0"
              maxHeight="540.0"
              maxWidth="400.0"
              minHeight="500.0"
              minWidth="360.0"
              spacing="14.0"
              styleClass="login-card">

            <!-- HEADER M츼S COMPACTO -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="login-header">
                
                <!-- Icono m치s peque침o -->
                <StackPane prefHeight="70" prefWidth="70">
                    <Circle radius="35" styleClass="login-icon-bg"/>
                    <Label text="游눑" styleClass="login-icon" style="-fx-font-size: 32px;"/>
                </StackPane>

                <!-- T칤tulo m치s peque침o -->
                <Label text="ExpenseFlow" styleClass="login-title" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                
                <!-- Subt칤tulo m치s peque침o -->
                <Label text="Control Inteligente de Gastos"
                       styleClass="login-subtitle"
                       style="-fx-font-size: 12px;"
                       textAlignment="CENTER"
                       maxWidth="320"/>

                <padding>
                    <Insets top="18" bottom="12"/>
                </padding>
            </VBox>

            <!-- FORMULARIO M츼S COMPACTO -->
            <VBox spacing="15" VBox.vgrow="NEVER">
                <padding>
                    <Insets left="36" right="36"/>
                </padding>

                <!-- Campo Usuario -->
                <VBox spacing="7">
                    <Label text="Usuario" styleClass="form-label" style="-fx-font-size: 12px;"/>
                    <HBox spacing="9" 
                          alignment="CENTER_LEFT" 
                          styleClass="input-box"
                          minHeight="42"
                          prefHeight="42">
                        <Label text="游녻" styleClass="input-icon" style="-fx-font-size: 15px;"/>
                        <TextField fx:id="txtUsername"
                                   promptText="Ingrese su usuario"
                                   styleClass="input-field"
                                   style="-fx-font-size: 12.5px;"
                                   HBox.hgrow="ALWAYS"
                                   focusTraversable="true"/>
                    </HBox>
                </VBox>

                <!-- Campo Contrase침a -->
                <VBox spacing="7">
                    <Label text="Contrase침a" styleClass="form-label" style="-fx-font-size: 12px;"/>
                    <HBox spacing="9" 
                          alignment="CENTER_LEFT" 
                          styleClass="input-box"
                          minHeight="42"
                          prefHeight="42">
                        <Label text="游" styleClass="input-icon" style="-fx-font-size: 15px;"/>
                        <PasswordField fx:id="txtPassword"
                                       promptText="Ingrese su contrase침a"
                                       styleClass="input-field"
                                       style="-fx-font-size: 12.5px;"
                                       HBox.hgrow="ALWAYS"
                                       focusTraversable="true"/>
                    </HBox>
                </VBox>

                <!-- Checkbox Recordarme -->
                <HBox alignment="CENTER_LEFT" spacing="7" style="-fx-padding: 3 0 0 2;">
                    <CheckBox fx:id="checkRecordarme" 
                              styleClass="custom-checkbox"
                              focusTraversable="true"/>
                    <Label text="Recordar mi sesi칩n" 
                           styleClass="checkbox-label"
                           style="-fx-font-size: 12px;"/>
                </HBox>

                <!-- Bot칩n Iniciar Sesi칩n -->
                <Button fx:id="btnLogin"
                        text="游댑 Iniciar Sesi칩n"
                        maxWidth="Infinity"
                        minHeight="44"
                        prefHeight="44"
                        onAction="#handleLogin"
                        styleClass="login-button"
                        style="-fx-font-size: 13.5px;"
                        defaultButton="true"
                        focusTraversable="true">
                    <VBox.margin>
                        <Insets top="5"/>
                    </VBox.margin>
                </Button>
            </VBox>

            <!-- Espaciador flexible -->
            <Region VBox.vgrow="ALWAYS" minHeight="14" maxHeight="24"/>

            <!-- Footer -->
            <VBox alignment="CENTER" spacing="2">
                <Label text="춸 2026 ExpenseFlow" 
                       styleClass="login-footer"
                       style="-fx-font-size: 10.5px;"/>
                <Label text="v1.0.0" 
                       styleClass="login-footer" 
                       style="-fx-font-size: 9.5px; -fx-opacity: 0.6;"/>
            </VBox>

            <!-- Padding del card reducido -->
            <padding>
                <Insets top="18" right="22" bottom="22" left="22"/>
            </padding>

        </VBox>
    </children>
</StackPane>